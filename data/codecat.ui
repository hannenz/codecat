<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk+" version="3.12"/>

	<template class="CodeCatApplicationWindow" parent="GtkApplicationWindow">
		<property name="title" translatable="yes">CodeCat</property>
		<property name="default-width">1200</property>
		<property name="default-height">1000</property>

		<child type="titlebar">
			<object class="GtkHeaderBar" id="header">
				<property name="visible">True</property>
				<property name="show-close-button">True</property>
				<property name="has-subtitle">False</property>

				<child type="title">
					<object class="GtkStackSwitcher" id="tabs">
						<property name="visible">True</property>
						<property name="stack">stack</property>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkBox">
				<property name="visible">True</property>
				<property name="orientation">vertical</property>

				<child>
					<object class="GtkStack" id="stack">
						<property name="visible">True</property>
						<property name="transition-type">slide-left-right</property>
						<child>
							<object class="GtkPaned">
								<property name="visible">True</property>
								<property name="orientation">horizontal</property>
								<property name="position">300</property>
								<child>
									<object class="GtkScrolledWindow">
										<property name="visible">True</property>
										<child>
											<object class="GtkTreeView" id="projects_treeview">
												<property name="visible">True</property>
												<property name="headers-clickable">True</property>
												<property name="rules-hint">True</property>
												<child>
													<object class="GtkTreeViewColumn" id="project_name_column">
														<property name="title">Project</property>
														<property name="clickable">True</property>
														<property name="sort-column-id">1</property>
														<child>
															<object class="GtkCellRendererText" id="project_name_cell_renderer" />
															<attributes>
																<attribute name="markup">1</attribute>
															</attributes>
														</child>
													</object>
												</child>
											</object>
										</child>
									</object>
								</child>
								<child>
									<object class="GtkBox">
										<property name="visible">True</property>
										<property name="orientation">horizontal</property>
										<child>
											<object class="GtkScrolledWindow">
												<property name="visible">True</property>
												<child>
													<object class="GtkTreeView" id="project_files">
														<property name="visible">True</property>
														<property name="headers-clickable">True</property>
														<property name="rules-hint">True</property>
														<child>
															<object class="GtkTreeViewColumn">
																<property name="title">Filename</property>
																<property name="clickable">True</property>
																<property name="sort-column-id">1</property>
																<child>
																	<object class="GtkCellRendererPixbuf">
																	</object>
																	<attributes>
																		<attribute name="gicon">3</attribute>
																	</attributes>
																</child>
																<child>
																	<object class="GtkCellRendererText" />
																	<attributes>
																		<attribute name="markup">1</attribute>
																	</attributes>
																</child>
															</object>
														</child>

<!-- 														<child>
															<object class="GtkTreeViewColumn">
																<property name="title">Path</property>
																<property name="clickable">True</property>
																<property name="sort-column-id">0</property>
																<child>
																	<object class="GtkCellRendererText" />
																	<attributes>
																		<attribute name="markup">0</attribute>
																	</attributes>
																</child>
															</object>
														</child>
 -->													</object>
												</child>
											</object>
											<packing>
												<property name="pack-type">start</property>
												<property name="expand">True</property>
												<property name="fill">True</property>
											</packing>
										</child>
										<child>
											<object class="GtkRevealer" id="inspector">
												<property name="visible">True</property>
												<property name="transition-type">slide-left</property>
												<child>
													<object class="GtkScrolledWindow">
														<property name="visible">True</property>
														<property name="hscrollbar-policy">never</property>
														<property name="vscrollbar-policy">automatic</property>
														<property name="width-request">300</property>
														<child>
															<object class="GtkListBox">
																<property name="visible">True</property>
																<child>
																	<object class="GtkButton">
																		<property name="visible">True</property>
																		<property name="label">Close</property>
																		<signal name="clicked" handler="on_inspector_close_button_clicked" />
																	</object>
																</child>
																<child>
																	<object class="GtkBox">
																		<property name="visible">True</property>
																		<property name="orientation">horizontal</property>
																		<property name="spacing">10</property>
																		<child>
																			<object class="GtkImage" id="inspector_primary_icon">
																				<property name="visible">True</property>
																			</object>
																		</child>
																		<child>
																			<object class="GtkLabel" id="inspector_primary_label">
																				<property name="visible">True</property>
																				<property name="label">I am the inspector</property>
																			</object>
																		</child>
																	</object>
																</child>
																<child>
																	<object class="GtkListBoxRow">
																		<property name="visible">True</property>
																		<child>
																			<object class="GtkLabel">
																				<property name="visible">True</property>
																				<property name="label">Watch</property>
																			</object>
																		</child>
																	</object>
																</child>
															</object>
														</child>
													</object>
												</child>
											</object>
										</child>
									</object>
								</child>
							</object>
							<packing>
								<property name="name">projects</property>
								<property name="title">Projects</property>
							</packing>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>